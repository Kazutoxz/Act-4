#include <stdio.h>

int main() {
    int numero;

    // Solicitar al usuario un número
    printf("Introduce un número: ");
    scanf("%d", &numero);

    // Comprobar si el número es par o impar
    if (numero % 2 == 0) {
        printf("El número es par.\n");
    } else {
        printf("El número es impar.\n");
    }

    return 0;
}
